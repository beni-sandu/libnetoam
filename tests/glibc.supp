{
   glibc-posix-timer-tls-1
   Memcheck:Leak
   match-leak-kinds: possible
   fun:calloc
   ...
   fun:allocate_dtv
   fun:_dl_allocate_tls
   fun:allocate_stack
   fun:pthread_create*
   ...
   fun:__timer_start_helper_thread
   fun:__pthread_once_slow*
   fun:pthread_once*
   fun:timer_create*
}

{
   glibc-posix-timer-tls-2   # shorter variant; some builds omit allocate_dtv in the bt
   Memcheck:Leak
   match-leak-kinds: possible
   fun:calloc
